@model IEnumerable<Barometer.Models.ProjectGroup>
<!--
Requirements:
Stap 3: Projectdocent accepteert de weergegeven informatie van het aantal groepen.
1.3.1 De gebruiker kan een melding accepteren
1.3.2 De gebruiker kan er voor kiezen om opnieuw te importeren
1.3.3 Het systeem kan het aantal projectgroep met hun bijbehorende studenten weergeven
 1.3.3.1 Het systeem kan het per projectgroep apart weergeven
-->

@{
    ViewBag.Title = "Lijst met toegevoegde groepen";
    ViewBag.Tag = "checkprojectgroups";
}

<div><b>@ViewBag.ProjectName</b></div>
@foreach (var item in Model)
{
    <div>
         <b>@item.ClassCode :</b><br />
         @Html.Action("ShowStudents", new { groupId = item.Id })
        <hr />      
    </div>
}

<div class="buttons">
        @using (Html.BeginForm("CheckProjectGroups2", "ProjectDocent", FormMethod.Post)){
            <button type="submit">Accepteer</button>
        }
    </div>


